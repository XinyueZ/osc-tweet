<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@id/error_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                style="@style/ActionBar_ToolBar" />

            <com.astuetz.PagerSlidingTabStrip
                android:id="@+id/tabs"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/primary_color"
                android:textColor="@color/common_white" />

            <android.support.v4.view.ViewPager
                android:id="@+id/vp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


        </LinearLayout>

        <fr.castorflex.android.smoothprogressbar.SmoothProgressBar
            android:id="@+id/loading_pb"
            android:layout_width="match_parent"
            android:layout_height="@dimen/pb_height"
            style="@style/GradientProgressBar"
            android:layout_gravity="top" android:visibility="invisible"
            android:layout_marginTop="?attr/actionBarSize"
            android:indeterminate="true" />

        <ImageButton
            android:id="@+id/edit_btn"
            android:layout_gravity="right|bottom"
            android:background="@drawable/circle_green"
            android:src="@drawable/ic_edit"
            style="@style/FloatButton"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin" />
    </FrameLayout>


    <com.chopping.utils.views.OneDirectionScrollView
        android:layout_width="250dp"
        android:layout_gravity="left"
        android:scrollbars="none"
        android:background="@android:color/white"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/drawer_menu_ll"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/app_list_fl"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </com.chopping.utils.views.OneDirectionScrollView>
</android.support.v4.widget.DrawerLayout>
