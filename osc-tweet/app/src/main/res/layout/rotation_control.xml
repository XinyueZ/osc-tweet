<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/rotation_ll"
        android:orientation="vertical"
        android:layout_gravity="bottom|right"
        android:layout_width="120dp"
        android:layout_height="120dp">

        <ImageView
            android:id="@+id/rotate_up_btn"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_rotate_up"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/common_transparent" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/rotate_left_btn"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_rotate_left"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:background="@color/common_transparent" />

            <ImageView
                android:id="@+id/rotate_auto_btn"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_av_loop"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@color/common_transparent" />



            <ImageView
                android:id="@+id/rotate_right_btn"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_rotate_right"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:background="@color/common_transparent" />
        </FrameLayout>

        <ImageView
            android:id="@+id/rotate_down_btn"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_rotate_down"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/common_transparent" />
    </LinearLayout>
</merge>