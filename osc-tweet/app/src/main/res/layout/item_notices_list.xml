<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/portrait_iv"
            android:layout_margin="@dimen/common_padding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/message_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/small_img_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_padding" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right">

        <Button
            android:id="@+id/reply_btn"
            android:text="@string/action_reply_comment"
            style="@style/Actives_List_Item" />

        <ProgressBar
            android:indeterminateDrawable="@drawable/progress_custom_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reply_pb" android:visibility="gone"
            android:layout_gravity="center_vertical" />

        <Button
            android:id="@+id/open_btn"
            android:text="@string/lbl_open"
            style="@style/Actives_List_Item" />

        <ProgressBar
            android:indeterminateDrawable="@drawable/progress_custom_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/open_pb" android:visibility="gone"
            android:layout_gravity="center_vertical" />
    </LinearLayout>


</LinearLayout>