<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone"
    android:orientation="vertical"
    tools:context="com.osc.tweet.app.fragments.MyInfoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/primary_color"
        android:padding="@dimen/common_padding">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.osc.tweet.views.RoundedNetworkImageView
                android:id="@+id/user_photo_iv"
                android:layout_gravity="center_horizontal"
                android:layout_width="@dimen/portrait_large_size"
                android:layout_height="@dimen/portrait_large_size" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="right|top"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/refresh_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/common_transparent"
                    android:src="@drawable/ic_refresh" />

                <ImageButton
                    android:id="@+id/settings_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/common_transparent"
                    android:src="@drawable/ic_settings" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <ImageButton
                        android:id="@+id/clean_list_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/common_transparent"
                        android:src="@drawable/ic_clear_list" />


                    <ProgressBar
                        style="?android:attr/progressBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/clear_pb"
                        android:visibility="gone"
                        android:layout_gravity="center" />
                </FrameLayout>


            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:text="@string/lbl_hello"
                style="@style/Style_My_Information_Label" />

            <TextView
                android:id="@+id/user_name_tv"
                android:textColor="@color/common_white"
                style="@style/Style_User_Information_Value" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="350dp">

        <com.astuetz.PagerSlidingTabStrip
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary_color"
            android:textColor="@color/common_white" />

        <android.support.v4.view.ViewPager
            android:id="@+id/vp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>