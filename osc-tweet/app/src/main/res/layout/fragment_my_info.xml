<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.osc.tweet.app.fragments.MyInfoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/primary_color"
        android:padding="@dimen/common_padding">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.osc.tweet.views.RoundedNetworkImageView
                android:id="@+id/user_photo_iv"
                android:layout_gravity="center_horizontal"
                android:layout_width="@dimen/portrait_large_size"
                android:layout_height="@dimen/portrait_large_size" />


            <ImageButton
                android:id="@+id/refresh_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/common_transparent"
                android:src="@drawable/ic_refresh"
                android:layout_gravity="right|top" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:text="@string/lbl_user_name"
                style="@style/Style_My_Information_Label" />

            <TextView
                android:id="@+id/user_name_tv"
                style="@style/Style_User_Information_Value" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="350dp">

        <com.astuetz.PagerSlidingTabStrip
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary_color"
            android:textColor="@color/common_white" />

        <android.support.v4.view.ViewPager
            android:id="@+id/vp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>