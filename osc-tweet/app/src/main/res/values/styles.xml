<resources>

    <style name="ActionBar_ToolBar">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:theme">@style/AppTheme</item>
        <item name="theme">@style/AppTheme</item>
        <item name="android:popupTheme">@style/AppTheme</item>
        <item name="popupTheme">@style/AppTheme</item>
        <item name="android:background">@color/primary_color</item>
        <item name="background">@color/primary_color</item>
    </style>


    <style name="ActionBar_ToolBar_On_Item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:minHeight">30dp</item>
        <item name="android:theme">@style/AppThemeToolBar</item>
        <item name="theme">@style/AppThemeToolBar</item>
        <item name="android:popupTheme">@style/AppThemeToolBar</item>
        <item name="popupTheme">@style/AppThemeToolBar</item>
        <item name="android:background">@color/common_transparent</item>
        <item name="background">@color/common_transparent</item>
    </style>


    <style name="ListItemCardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="contentPadding">5dp</item>
        <item name="cardElevation">1dp</item>
        <item name="cardMaxElevation">2dp</item>
    </style>


    <style name="CardView" parent="@style/ListItemCardView" />

    <style name="FloatButton">
        <item name="android:layout_width">@dimen/float_button_size</item>
        <item name="android:layout_height">@dimen/float_button_size</item>
        <item name="android:layout_margin">@dimen/float_button_margin</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Line_Date_Comments">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="Line_Date_Comments_ImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@color/common_transparent</item>
    </style>

    <style name="GradientProgressBar" parent="SmoothProgressBar">
        <item name="spb_stroke_separator_length">0dp</item>
        <item name="spb_sections_count">3</item>
        <item name="spb_speed">1.7</item>
        <item name="spb_stroke_width">@dimen/pb_height</item>
        <item name="android:interpolator">@android:anim/decelerate_interpolator</item>
        <item name="spb_colors">@array/loading_colors</item>
        <item name="spb_gradients">true</item>
    </style>

    <style name="PocketProgressBar" parent="SmoothProgressBar">
        <item name="spb_stroke_separator_length">4dp</item>
        <item name="spb_sections_count">4</item>
        <item name="spb_speed">1</item>
        <item name="android:interpolator">@anim/pocket_interpolator</item>
        <item name="spb_colors">@array/pocket_bar_colors</item>
        <item name="spb_progressiveStart_activated">true</item>
        <item name="spb_generate_background_with_colors">false</item>
    </style>


    <style name="Theme.Transparent.Dialog" parent="Theme.Transparent">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="Style_User_Information_Label">
        <item name="android:textColor">@color/common_blue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="Style_User_Information_Value">
        <item name="android:textColor">@color/common_black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/common_padding</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>


</resources>
